<div class="navbar-header">
  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
          aria-expanded="false" aria-controls="navbar">
    <span class="sr-only">Toggle navigation</span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
  </button>
  <a class="navbar-brand" href="{{url}}"><img id="logo" src="/images/logo.svg"/></a>
</div>

<div id="navbar" class="collapse navbar-collapse">

  <ul class="nav navbar-nav">{{{headerItems}}}</ul>

  <ul class="nav navbar-nav navbar-right">
    <li>
      <a href="javascript:void 0;" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-fw fa-language"></i> {{i18n 'navigation.language'}} <b class="caret"></b>
      </a>
      <ul id="language-selector" class="dropdown-menu">
        {{#each locales}}
          {{#if isActive}}
            <li class="text-mono active"><a>{{language}} - {{locale}}</a></li>
          {{else}}
            <li class="text-mono"><a href="{{localeURL locale}}">{{language}} - {{locale}}</a></li>
          {{/if}}
        {{/each}}
      </ul>
    </li>
  </ul>
</div>
